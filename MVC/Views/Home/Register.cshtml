@{
    ViewData["Title"] = "Registration";
}
<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="/Privacy" novalidate="novalidate">
        <!--Event-->
            <h4> Create a new account</h4>
            <hr>
            <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                <ul>
                    <li style= "display:none"></li>
                </ul>
            </div>
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="Email">Email</label>
                <input id="Email" class="form-control" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." name="Email" value ="">
                <!--event-->
                <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group bmd-form-group">
                    <label class="bmd-label-static" for="Password">Password</label>
                    <input id="Password" class="form-control" type="password" data-val="true" data-val-required="The Password field is required." name="Password">
                    <!--event-->
                    <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </div>
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="ConfirmPassword">Confirm Password</label>
                <input id="ConfirmPassword" class="form-control" type="password" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" name="ConfirmPassword">
                <!--event logic-->
                <span class="text-danger field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
            </div>    
            <div class="form-group bmd-form-group">
                    <label class="bmd-label-static" for="Firstname">First Name</label>
                    <input id="Password" class="form-control" type="firstname" data-val="true" data-val-required="The Firstname field is required." name="Firstname">
                    <!--event-->
                    <span class="text-danger field-validation-valid" data-valmsg-for="Firstname" data-valmsg-replace="true"></span>
                </div>
                 <div class="form-group bmd-form-group">
                    <label class="bmd-label-static" for="Lastname">Last Name</label>
                    <input id="Password" class="form-control" type="lastname" data-val="true" data-val-required="The Lastname field is required." name="Lastname">
                    <!--event-->
                    <span class="text-danger field-validation-valid" data-valmsg-for="Lastname" data-valmsg-replace="true"></span>
                </div>
            <button class="btn btn-default" type="submit">Register</button>
        </form>
    </div>
</div>
<div class="footer"></div>
