@model PRPC_CIDM4390.Models.Registration
@{
    ViewData["Title"] = "Index";
}

<h2>Register</h2>


<h4>Create a new account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="Home/Register" novalidate="novalidate">
        <!--Event-->
            
            <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                <ul>
                    <li style= "display:none"></li>
                </ul>
            </div>
             <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="FirstName">First Name</label>
                <input id="FirstName" class="form-control" type="text" data-val="true" data-val-required="The First name field is required." name="FirstName" value ="">
                <!--event-->
                <span class="text-danger field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
            </div>
               <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="LastName">Last Name</label>
                <input id="LastName" class="form-control" type="text" data-val="true" data-val-required="The Last name field is required." name="LastName" value ="">
                <!--event-->
                <span class="text-danger field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="Email">Email</label>
                <input id="Email" class="form-control" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." name="Email" value ="" placeholder="example@example.com">
                <!--event-->
                <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1"> </label> Email Notification
            </div>
            
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="Password">Password</label>
                <input id="Password" class="form-control" type="password" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" name="ConfirmPassword">
                <!--event logic-->
                <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            </div>    
          
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="ConfirmPassword">Confirm Password</label>
                <input id="ConfirmPassword" class="form-control" type="password" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" name="ConfirmPassword">
                <!--event logic-->
                <span class="text-danger field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
            </div>    
            <div class="form-group bmd-form-group">
                <label class="bmd-label-static" for="PhoneNumber">Phone Number</label>
                <input id="PhoneNumber" class="form-control" type="number" data-val="true"  data-val-phonenumber="The PhoneNumber is not a valid number." data-val-required="The PhoneNumber field is required." name="PhoneNumber" value ="" placeholder="000)123-4567">
                <!--event-->
                <span class="text-danger field-validation-valid" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1"> </label>  SMS Notification
            </div>
              
            <br/>
            <button class="btn btn-default" type="submit">Register</button>
        </form>
        <br/>
          <div>
   
    Already have an account?<a asp-action="Login"> Sign in</a>
</div>
